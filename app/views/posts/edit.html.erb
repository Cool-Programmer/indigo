<div id="page_wrapper">
  <h1>Edit Post</h1>
  <%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="errors">
      <h2>You have <%= pluralize(@post.errors.count, "error") %></h2>
      <ul>
        <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, "Title" %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body, "Body" %> <br>
    <%= f.text_area :body %>
  </p>

  <%= f.submit "Add Post", :disable_with => 'Adding...' %>

<% end %>
</div>
